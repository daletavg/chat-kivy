<ChatWindow>
    BoxLayout:
        size: root.size
        orientation: 'vertical'
#        MDToolbar:
#            id: toolbar
#            title: 'Chat'
#            md_bg_color: self.theme_cls.primary_color
        Chat:
            pos: root.pos
            size: root.size

<Chat>
    canvas:
        Color:
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: root.pos
            size: root.size

#    BoxLayout:
#        cols: 1
#    orientation: 'vertical'
#    size_hint_y: None
##    height: self.minimum_height
#    spacing: dp(15)
#    pos_hint: {'center_x': .5, 'center_y': .5}
    GridLayout:
        size: root.size
        cols: 1
        viewclass: 'SelectableLabel'
        RV:

            size: self.size
            pos: self.pos
        MDTextFieldRound:
            width: root.width
            hint_text: 'Message'
            spacing: dp(5)
            foreground_color: 0,0,0,1
            icon_right: 'send'
            icon_right_color: self.theme_cls.primary_color
            icon_left_color: self.theme_cls.primary_color
            normal_color: [0, 0, 0, .1]


<SelectableGrid>:
    # Draw a background to indicate selection
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (255, 255, 255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:

    SelectableRecycleBoxLayout:
        viewclass: 'SelectableGrid'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True
